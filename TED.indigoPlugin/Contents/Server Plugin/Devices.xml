<?xml version="1.0"?>
<Devices>
<Device type="custom" id="ted">
<Name>TED</Name>
<ConfigUI>
<SupportURL>http://slashdot.org</SupportURL>
<Field id="dev" 
            type="menu" 
            readOnly="NO" >
        <Label>Serial Device</Label>
        <List class="indigo.serialPorts" filter="indigo.ignoreBluetooth" />
    </Field>
<Field id="poll"
            type="textfield"
            readOnly="NO" >
        <Label>Seconds inbetween polls</Label>
    </Field>

<Field id="enableCurrentKwVariable"
   type="checkbox" 
   devaultValue="no" >
<Label>Enable storing Instantaneous KW to variable</Label>
</Field>

<Field id="currentKwVariableName"
   type="textfield" 
   enabledBindingId="enableCurrentKwVariable"  
   defaultValue="instant_kw" >
<Label>Instantaneous KW variable name</Label>
</Field>

<Field id="enableDayKwhVariable"
   type="checkbox" 
   devaultValue="no" >
<Label>Enable storing today's KWH to variable</Label>
</Field>

<Field id="dayKwhVariableName"
   type="textfield"
   enabledBindingId="enableDayKwhVariable"  
   defaultValue="today_kwh" >
<Label>Today's KWH variable name</Label>
</Field>

<Field id="enableMonthKwhVariable"
   type="checkbox" 
   devaultValue="no" >
<Label>Enable storing this month's KWH to variable</Label>
</Field>

<Field id="monthKwhVariableName"
   type="textfield"
   enabledBindingId="enableMonthKwhVariable"
   defaultValue="month_kwh" >
<Label>This month's KWH variable name</Label>
</Field>


<Field id="enableVoltsVariable"
   type="checkbox"
   devaultValue="no" >
<Label>Enable storing Volts to variable</Label>
</Field>

<Field id="voltsVariableName"
   type="textfield"
   enabledBindingId="enableVoltsVariable"
   defaultValue="volts" >
<Label>Volts variable name</Label>
</Field>




</ConfigUI>
<States>
    <State id="current_kw">
      <ValueType>Float</ValueType>
      <TriggerLabel>Instantaneous killowatt usage</TriggerLabel>
      <ControlPageLabel>Instantaneous killwatt usage</ControlPageLabel>
    </State>
    <State id="kwH_today">
      <ValueType>Float</ValueType>
      <TriggerLabel>Killowatt Hours used today</TriggerLabel>
      <ControlPageLabel>Killowatt Hours used today</ControlPageLabel>
    </State>
    <State id="kwH_month">
      <ValueType>Float</ValueType>
      <TriggerLabel>Killwatt Hours used this month</TriggerLabel>
      <ControlPageLabel>Killowatt Hours used this month</ControlPageLabel>
    </State>
    <State id="volts">
      <ValueType>Float</ValueType>
      <TriggerLabel>Volts</TriggerLabel>
      <ControlPageLabel>Volts</ControlPageLabel>
    </State>
</States>
</Device>
</Devices>
